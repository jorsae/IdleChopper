<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdleChopper.Views.GamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Welcome to Xamarin.Forms!"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Label HorizontalOptions="Center" Text="{x:Binding Logs, Mode=OneWay, UpdateSourceEventName=PropertyChanged}"/>
            <!--<Label HorizontalOptions="Center" Text="{x:Binding Coins, Mode=OneWay, UpdateSourceEventName=PropertyChanged}"/>-->
            
            <Button VerticalOptions="Center" Text="Coins +1" Command="{x:Binding LogClickCommand, Mode=OneWay}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>