<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IdleChopper.Views.GamePage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" >
                <Label Text="Coins: "/>
                <Label Text="{x:Binding Coins, Mode=OneWay, UpdateSourceEventName=PropertyChanged}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal" >
                <Label Text="Logs: "/>
                <Label Text="{x:Binding Logs, Mode=OneWay, UpdateSourceEventName=PropertyChanged}"/>
            </StackLayout>

            <Button Text="Chop wood"
                    VerticalOptions="CenterAndExpand" 
                    HorizontalOptions="CenterAndExpand"
                    Command="{x:Binding LogClickCommand, Mode=OneWay}"/>

            <Button Text="Buy Axe" 
                    Command="{x:Binding BuyAxeCommand, Mode=OneWay}"
                    />
            <Button Text="Buy Wood Truck" 
                    Command="{x:Binding BuyWoodTruckCommand, Mode=OneWay}"
                    />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>